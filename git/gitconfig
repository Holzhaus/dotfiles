[credential]
	helper = libsecret
[push]
	default = matching

[merge]
	tool = nfugitive

[mergetool "nvimdiff4"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[mergetool "nfugitive"]
	cmd = nvim -f -c "Gdiff" "$MERGED"
[init]
	templatedir = ~/.gittemplate
[alias]
	ctags = !.git/hooks/ctags
