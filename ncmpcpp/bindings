def_command "reconnect-rtp" [deferred]
  run_external_command "(pacmd unload-module module-rtp-recv ; pacmd unload-module module-rtp-recv) >/dev/null 2>&1"

def_key "j"
  scroll_down

def_key "k"
  scroll_up

def_key "h"
  previous_column

def_key "l"
  next_column


def_key "+"
    volume_up

def_key "-"
    volume_down


def_key "ctrl-u"
    page_up

def_key "ctrl-d"
    page_down

def_key "ctrl-e"
    push_characters "jjj"

def_key "ctrl-y"
    push_characters "kkk"


def_key "."
    show_lyrics


def_key "n"
    next_found_item

def_key "N"
    previous_found_item


def_key "J"
    move_sort_order_down

def_key "K"
    move_sort_order_up
